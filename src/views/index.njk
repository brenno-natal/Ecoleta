{# Define o local para onde enviar o conteudo #}
{% extends "layout.njk" %}

{# Define o nome do id utilizado para o conteudo da pagina #}
{% set pageId = "page-home" %}

{# Envia o conteudo dentro do bloco para o arquivo layout, 
    aonde existe o bloco com indentificador "styles" #}
{% block styles %}
    <link href="/styles/home.css" rel="stylesheet">
    <link href="/styles/modal.css" rel="stylesheet">
{% endblock styles %}

{% block content %}
    <div class="content">
        <header>
            <img src="assets/icones/logo.svg" alt="Logomarca">
            <a href="create-point">
                <span></span>
                Cadastre um ponto de coleta
            </a>
        </header>

        <main>
            <h1>Seu marketplace de coleta de res√≠duos</h1>

            <p>Ajudamos pessoas a encontrar pontos de coleta de forma eficiente</p>

            <a href="#">
                <span></span>
                <strong>Pesquisar pontos de coleta</strong>
            </a>

        </main>

    </div>
{% endblock content %}

{% block modal %}
    {% include "partials/modal.njk" %}
{% endblock modal %}

{% block scripts %}
    <script src="scripts/index.js"></script>

{% endblock scripts %}